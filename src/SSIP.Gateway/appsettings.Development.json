{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Information"
    }
  },

  "ConnectionStrings": {
    "Redis": "localhost:6379"
  },

  "Jwt": {
    "SecretKey": "SSIP-Development-Secret-Key-For-Local-Testing-Only-32-Chars!",
    "Issuer": "https://localhost:5000",
    "Audience": "ssip-api-dev"
  },

  "EventBus": {
    "ConnectionString": "UseDevelopmentStorage=true"
  },

  "RateLimiting": {
    "Enabled": true,
    "FailOpen": true,
    "Policies": [
      {
        "PolicyName": "default",
        "RequestsPerWindow": 1000,
        "WindowSize": "00:01:00"
      }
    ]
  },

  "Gateway": {
    "Services": [
      {
        "Name": "erp-service",
        "BaseUrl": "http://localhost:5001"
      },
      {
        "Name": "tinybox-ai",
        "BaseUrl": "http://localhost:5002"
      },
      {
        "Name": "crm-connector",
        "BaseUrl": "http://localhost:5003"
      },
      {
        "Name": "mock-service",
        "BaseUrl": "http://localhost:5099"
      }
    ]
  },

  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "http://localhost:5173",
      "http://127.0.0.1:3000",
      "http://127.0.0.1:5173"
    ]
  },

  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "System": "Information"
      }
    }
  }
}

